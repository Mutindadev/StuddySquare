{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto Setup Environment",
      "type": "shell",
      "windows": {
        "command": "setup.bat"
      },
      "linux": {
        "command": "chmod +x setup.sh && ./setup.sh"
      },
      "osx": {
        "command": "chmod +x setup.sh && ./setup.sh"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}